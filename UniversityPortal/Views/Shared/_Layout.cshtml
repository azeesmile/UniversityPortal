@using Microsoft.Ajax.Utilities

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link href="~/Content/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/admin/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600" rel="stylesheet">
    <link href="~/Content/admin/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/admin/css/style.css" rel="stylesheet">
    <link href="~/Content/admin/css/pages/dashboard.css" rel="stylesheet">
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span> 
                </a><a class="brand" href="index.html">Lahore Garrison University</a>
                <div class="nav-collapse">
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-cog"></i> Account <b class="caret"></b></a>
                            @Html.Partial("_LoginPartial")
                            @*<ul class="dropdown-menu">
                                <li><a href="javascript:;">Settings</a></li>
                                <li><a href="javascript:;">Help</a></li>
                            </ul>*@
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i> EGrappler.com <b class="caret"></b></a>
                            @Html.Partial("_LoginPartial")
                            @*<ul class="dropdown-menu">
                                <li><a href="javascript:;">Profile</a></li>
                                <li><a href="javascript:;">Logout</a></li>
                            </ul>*@
                        </li>
                    </ul>
                    <form class="navbar-search pull-right">
                        <input type="text" class="search-query" placeholder="Search">
                    </form>
                </div>
                <!--/.nav-collapse -->
            </div>
            <!-- /container -->
        </div>
        <!-- /navbar-inner -->
    </div>
    <!-- /navbar -->
    <div class="subnavbar">
        @if (Request.IsAuthenticated && User.IsInRole("Student"))
        {
            @Html.Partial("~/Views/Shared/PartialViews/_StudentNavigationPartialView.cshtml")
        }
        else if (Request.IsAuthenticated && User.IsInRole("Teacher"))
        {
            @Html.Partial("~/Views/Shared/PartialViews/_TeacherNavigationPartialView.cshtml")
        }
        else if (Request.IsAuthenticated && User.IsInRole("Admin"))
        {
            @Html.Partial("~/Views/Shared/PartialViews/_AdminNavigationPartialView.cshtml")
        }
        <!-- /subnavbar-inner -->
    </div>
    <!-- /subnavbar -->
    <div class="main">
        <div class="main-inner">
            <div class="container">
                @RenderBody()
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /main-inner -->
    </div>
    <!-- /main -->
    <div class="extra">
        <!-- Will Put something if needed-->
        <!-- /extra-inner -->
    </div>
    <!-- /extra -->
    <div class="footer">
        <div class="footer-inner">
            <div class="container">
                <div class="row">
                    <div class="span12"> © 2013 <a href="#">Lahore Garrison University</a>. </div>
                    <!-- /span12 -->
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /footer-inner -->
    </div>
    <!-- /footer -->
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/admin/js/jquery-1.7.2.min.js"></script>
    <script src="~/Scripts/admin/js/excanvas.min.js"></script>
    <script src="~/Scripts/admin/js/chart.min.js" type="text/javascript"></script>
    <script src="~/Scripts/admin/js/bootstrap.js"></script>
    <script language="javascript" type="text/javascript" src="~/Scripts/admin/js/full-calendar/fullcalendar.min.js"></script>

    <script src="~/Scripts/admin/js/base.js"></script>
    <!-- /Calendar -->
    @RenderSection("Scripts", required: false)
</body>
</html>